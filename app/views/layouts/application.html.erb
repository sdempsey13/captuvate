<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/head' %>
  </head>

  <body class="d-flex flex-column min-vh-100">
    <%= render "navbar" %>

    <div class="d-flex flex-grow-1" style="height: calc(100vh - 64px);">
      <aside class="sidebar bg-white border-end h-100 px-3 py-4">
        <nav class="nav flex-column gap-2">
      
          <%= link_to dashboard_path, class: "nav-link d-flex align-items-center gap-2 px-3 py-2 rounded text-dark sidebar-link" do %>
            <%= icon "home", style: "width: 1.25em; height: 1.25em;" %>
            <span class="fw-semibold">Dashboard</span>
          <% end %>
      
          <%= link_to domains_path, class: "nav-link d-flex align-items-center gap-2 px-3 py-2 rounded text-dark sidebar-link" do %>
            <%= icon "chart-bar", style: "width: 1.25em; height: 1.25em;" %>
            <span class="fw-semibold">Campaigns</span>
          <% end %>

          <%= link_to domains_path, class: "nav-link d-flex align-items-center gap-2 px-3 py-2 rounded text-dark sidebar-link" do %>
            <%= icon "cog", style: "width: 1.25em; height: 1.25em;" %>
            <span class="fw-semibold">Settings</span>
          <% end %>
      
        </nav>
      </aside>
  
      <main class="flex-grow-1 overflow-auto px-4 py-4">
        <%= render 'flash' %>
        <%= yield %>
      </main>
    </div>
  </body>
</html>