<div class="text-center mb-5">
  <%= image_tag 'logo_transparent.png', alt: "Captuvate Logo", style: "height: 48px;" %>
  <div class="mt-2">
    <p class="text-muted small mb-0">Choose a new password</p>
  </div>
</div>

<%= form_with model: resource, url: password_path(resource_name), local: true do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-3 px-3 py-2" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-3 px-3 py-2" %>
  </div>

  <div class="d-grid mb-3">
    <%= f.submit "Reset password", class: "btn btn-custom-primary py-2" %>
  </div>
<% end %>
