<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center">
          <h2>Forgot Password</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "needs-validation" }) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>

            <div class="d-grid">
              <%= f.submit "Send reset instructions", class: "btn btn-warning" %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
            <%= link_to "Log in", new_session_path(resource_name), class: "text-decoration-none" %><br>
            <%= link_to "Sign up", new_registration_path(resource_name), class: "text-decoration-none" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
