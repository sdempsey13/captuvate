<div class="text-center mb-4">
  <%= image_tag 'logo_transparent.png', alt: "Captuvate Logo", style: "height: 48px;" %>
  <div class="mt-2">
    <p class="text-muted">Sign in to Captuvate</p>
  </div>
</div>

<%= form_with model: resource, url: session_path(resource_name), local: true, class: "needs-validation" do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="mb-2">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-decoration-none small text-primary" %>
  </div>

  <div class="form-check mb-3">
    <%= f.check_box :remember_me, class: "form-check-input" %>
    <%= f.label :remember_me, class: "form-check-label" %>
  </div>

  <div class="d-grid mb-3">
    <%= f.submit "Sign in", class: "btn btn-custom-primary" %>
  </div>
<% end %>

<div class="text-center mt-4">
  <small>Don't have an account? <%= link_to "Sign up free", new_registration_path(resource_name), class: "text-decoration-none text-primary" %></small>
</div>
