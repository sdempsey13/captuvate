<div class="row">

  <%= render "side_bar" %>
  
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <div class="d-flex">
        <%= link_to domain_path(@snap_shot.domain), class: "text-decoration-none", style: "all: unset; cursor: pointer;" do %>
          <%= icon "arrow-left-end-on-rectangle", style: "width: 2em;", class: "me-2" %>
        <% end %>
        <div class="h4 ms-auto">
          Capture taken: <%= "#{@snap_shot.created_at.strftime("%B %d, %Y at %I:%M%P")}" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8 pb-5">
        <div class="card" style="width: 100%;">
          <%= image_tag @snap_shot.screen_shot %>
        </div>  
      </div>

      <div class="col-md-4">
        <div class="card" style="width: 100%;">
          <%= form_with(model: @snap_shot, url: snap_shots_path, local: true) do |f| %>
            <div class="mb-3">
              <%= f.label :content, "Your Comment" %>
              <%= f.text_area :content, class: "form-control", rows: 3 %>
            </div>
            
            <%= f.submit "Add Comment", class: "btn btn-primary" %>
          <% end %>
        </div>  
      </div>
    </div>
    
    <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>
  </main>
</div>
