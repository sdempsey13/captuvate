<h2 class="mb-4">Test History</h2>
<hr>

<div class="row">
  <aside class="col-md-3">
    <nav class="nav flex-column gap-2 bg-light rounded p-3">
    <div class="card p-3 border rounded shadow-sm bg-white">
    <% dropdowns = ["Date Range", "Metrics", "Status", "Platform", "Audience", "Tags"] %>
    <% dropdowns.each do |label| %>
        
      <div class="mb-2">
        <button class="btn w-100 d-flex justify-content-between align-items-center text-start" type="button" data-bs-toggle="collapse" data-bs-target="##{label.parameterize}-filter" aria-expanded="false">
          <strong><%= label %></strong>
          <%= icon "chevron-down", style: "width: 1.25em; height: 1.25em;" %>
        </button>
        <div class="collapse" id="<%= "#{label.parameterize}-filter" %>">
          <!-- Put your actual filter options here -->
          <div class="mt-2 ps-2 text-muted">Options go here...</div>
        </div>
      </div>
      <hr />
    <% end %>
  
    <div class="mb-3">
      <button class="btn w-100 d-flex justify-content-between align-items-center text-start" type="button" data-bs-toggle="collapse" data-bs-target="#year-filter" aria-expanded="true">
        <strong>Year</strong>
        <%= icon "chevron-down", style: "width: 1.25em; height: 1.25em;" %>
      </button>
      <div class="collapse show" id="year-filter">
        <div class="mt-3 d-flex align-items-center gap-2">
          <%= number_field_tag :year_min, 1999, class: "form-control", placeholder: "From" %>
          <span>to</span>
          <%= number_field_tag :year_max, 2004, class: "form-control", placeholder: "To" %>
        </div>
        <button class="btn btn-outline-secondary mt-2 w-100" disabled>Go</button>
      </div>
    </div>

    </nav>
  </aside>

  <main class="col-md-9">
    <div class="row">
        <div class="col-md-3 mb-3">
        <div class="card text-center p-3 bg-white">
        <h4 class="text-success">39%</h4>
        <small class="text-muted">Win Rate</small>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-center p-3 bg-white">
        <h4 class="text-success">+4%</h4>
        <small class="text-muted">Avg. Lift</small>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-center p-3 bg-white">
        <h4 class="text-success">7</h4>
        <small class="text-muted">Total Tests</small>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-center p-3 bg-white">
        <%= link_to "Download CSV", new_user_registration_path, class: "btn-custom btn-custom-primary me-2 mb-2" %>
        <%= link_to "View Report", new_user_registration_path, class: "btn-custom btn-custom-primary btn-custom-ghost me-2" %>
        </div>
    </div>
    </div>
    <div class="row">
        <div class="card shadow-sm p-3 bg-white">
    <h5 class="mb-3">Tests in This View</h5>
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
        <tr>
            <th class='w-10'>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Primary Metric</th>
            <th>Winner?</th>
            <th>Confidence</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        <% 7.times do %>
            <tr>
            <td class='w-10'>Home Page Copy Update</td>
            <td>4/1/25</td>
            <td>4/30/25</td>
            <td>AOV</td>
            <td class="text-success">yes</td>
            <td class="text-success">96%</td>
            <td><span class="badge bg-success">Complete</span></td>
            </tr>
        <% end %>
        </tbody>
    </table>
    </div>
    </div>

  
  </main>
</div>

