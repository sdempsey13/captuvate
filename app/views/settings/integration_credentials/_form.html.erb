
<%= form_with model: integration_credential, url: settings_api_keys_path, class: "needs-validation" do |form| %>
    <% if integration_credential.errors.any? %>
      <div class="alert alert-danger">
        <p class="mb-1"><strong>Could not save API key:</strong></p>
        <ul class="mb-0">
          <% integration_credential.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="mb-3">
      <%= form.label :integration_id, "Integration", class: "form-label" %>
      <%= form.collection_select :integration_id, Integration.all, :id, :name, { prompt: "Select an Integration" }, { class: "form-select" } %>
    </div>
  
    <div class="mb-3">
      <%= form.label :encrypted_api_key, "API Key", class: "form-label" %>
      <%= form.text_field :encrypted_api_key, class: "form-control", autocomplete: "off", placeholder: "Paste your API key here" %>
    </div>
  
    <%= form.submit "Save", class: "btn btn-primary" %>
<% end %>
