<%= turbo_frame_tag dom_id(credential) do %>
  <li class="list-group-item credential-item d-flex justify-content-between align-items-center">
    <div>
      <strong><%= credential.integration.display_name %></strong><br>
      <small class="text-muted"><%= credential.encrypted_secret_key %></small>
    </div>

    <div class="d-flex align-items-center gap-2">
      <span class="badge bg-secondary"><%= credential.created_at.strftime("%b %d, %Y") %></span>

      <%= button_to settings_webhook_path(credential),
                    method: :delete,
                    form: { data: { turbo_confirm: "Are you sure you want to delete this API key? This cannot be undone." } },
                    class: "btn btn-sm btn-outline-danger" do %>
        Delete
      <% end %>
    </div>
  </li>
<% end %>
